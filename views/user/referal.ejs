<%- include('../partials/user/header') %>
        <main class="main">
            <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('assets/images/backgrounds/login-bg.jpg')">
            	<div class="container">
            		<div class="form-box">
            			<div class="form-tab">
	            			<ul class="nav nav-pills nav-fill" role="tablist">
							    <li class="nav-item">
							        <a class="nav-link active" id="signin-tab-2" data-toggle="tab" href="#signin-2" role="tab" aria-controls="signin-2" aria-selected="false">APPLY REFERAL CODE</a>
							    </li>
							</ul>
							<div class="tab-content">
							    <div class="tab-pane fade show active" id="signin-2" role="tabpanel" aria-labelledby="signin-tab-2">
							    	<form action="/validateReferal" method="POST">
                                        <input type="hidden" value="<%=locals.email%>" name="email">
							    		<div class="form-group">
							    			<label for="referal">Referal Code: (optional)</label>
							    			<input type="text" class="form-control" id="referal" name="referalCode" required>
                                            <label style="display: none;" id="referal-error"></label>
							    		</div><!-- End .form-group -->

							    		<div class="form-footer">
							    			<button type="submit" class="btn btn-outline-primary-2">
			                					<span>VERIFY REFERAL CODE</span>
			            						<i class="icon-long-arrow-right"></i>
			                				</button>
                                            <!-- Don't Have Account? &nbsp;<a href="/signup" class="">SignUp</a> -->											
							    		</div><!-- End .form-footer -->
							    	</form>
                                    <a href="/"><button class="btn btn-outline-primary-2 skip">SKIP</button></a>
							    </div><!-- .End .tab-pane -->
							</div><!-- End .tab-content -->
						</div><!-- End .form-tab -->
            		</div><!-- End .form-box -->
            	</div><!-- End .container -->
            </div><!-- End .login-page section-bg -->
        </main><!-- End .main -->

        <%- include('../partials/user/footer') -%>
